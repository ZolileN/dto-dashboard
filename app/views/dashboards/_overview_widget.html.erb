<div data-id="<%= widget.id %>" class="aus-width-one-fourth">
  <div class="widget <%= widget.name_slug %> has-data-<%= widget.has_data? %> <%= widget.style %>">
    <div id="<%= widget.name_slug %>" class="widget__title <%= widget.name_slug %>">
      <h4><%= widget.name %></h4>
    </div>
    <div class="widget__inner <%= widget.name_slug %>" data-data="<%= render partial: 'chart/widget', locals: { widget: widget } %>" aria-hidden="true">
    </div>
    <%= render :partial => 'data_table', :locals => { :widget => widget } %>
  </div>
</div>
