<div class="container">
  <%- if @widget.type == 'full' %>
    <div aria-hidden="true" class="patterns">
      <svg height="10" width="10" xmlns="http://www.w3.org/2000/svg" version="1.1">
        <defs>
          <pattern id="diagonal-stripe-1" patternUnits="userSpaceOnUse" width="10" height="10">
            <image xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="data:image/svg+xml;base64," x="0" y="0" width="10" height="10"></image>
          </pattern>
        </defs>
      </svg>
    </div>
    <div class="hero-region">
      <div class="container">
        <div class="row">
          <div class="col-xs-12">
            <div class="dashboard__top">
              <div class="clearfix">
                <div class="hero-widget hero" data-data="<%= render partial: 'chart/datasets', locals: { datasets: @widget.datasets } %>"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% else %>
  <div class="dashboard__secondary dashboard__below-the-line">
    <div class="row">
      <%= render partial: '/dashboards/widget', locals: { widget: @widget } %>
    </div>
  </div>
  <% end %>
</div>
